{
  "formatting": {
    "enabled": true,
    "formatOnSave": true,
    "formatOnPaste": true,
    "html": {
      "indentSize": 2,
      "wrapLineLength": 100,
      "preserveNewLines": true
    },
    "css": {
      "indentSize": 2,
      "newlineBetweenSelectors": true,
      "mediaQueriesAtEnd": true
    },
    "javascript": {
      "indentSize": 2,
      "singleQuote": true,
      "trailingComma": "es5",
      "semi": true,
      "printWidth": 100
    }
  },
  "linting": {
    "enabled": true,
    "html": {
      "doctype": true,
      "accessibility": true,
      "viewport": true
    },
    "css": {
      "vendorPrefix": true,
      "zeroUnits": "no",
      "importStatement": true,
      "mediaQueries": {
        "mobileFirst": true,
        "preferMinWidth": true
      }
    },
    "javascript": {
      "eqeqeq": true,
      "unused": "all",
      "undef": true,
      "noImplicitReturns": true
    }
  },
  "fileManagement": {
    "maxFileSize": "500KB",
    "maxLineLength": 120,
    "maxLineCount": 400
  },
  "folders": {
    "assets": {
      "description": "Static assets like images, fonts, etc."
    },
    "css": {
      "description": "CSS stylesheets"
    },
    "js": {
      "description": "JavaScript files"
    },
    "pages": {
      "description": "HTML pages for the campaign"
    }
  },
  "customRules": {
    "warhammer40k": {
      "factionColors": {
        "description": "Use consistent faction color codes across the site"
      },
      "campaignTimeline": {
        "description": "Maintain a consistent timeline format for campaign events"
      }
    },
    "responsiveDesign": {
      "breakpoints": {
        "mobile": "0-767px",
        "tablet": "768-1023px",
        "desktop": "1024px+"
      },
      "mobileFirst": {
        "description": "Always start with mobile styles as the default, then enhance for larger screens using min-width media queries",
        "enabled": true
      },
      "touchTargets": {
        "description": "Touch targets should be at least 44x44px on mobile devices",
        "minSize": "44px"
      },
      "flexibleImages": {
        "description": "All images should be responsive with max-width: 100%",
        "enabled": true
      }
    }
  }
} 